{
  "name": "Alerta Notifier",
  "description": "A simple chrome extension that notifies when new alerts are in Alerta",
  "manifest_version": 2,
  "version": "1.0.0",
  "icons": {
    "16": "alert.png",
    "48": "alert.png",
    "128": "alert.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "alert.png",
      "48": "alert.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "https://*/",
    "http://*/"
  ],
  "web_accessible_resources": ["alert.png"]
}