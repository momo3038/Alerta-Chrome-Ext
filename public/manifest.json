{
  "name": "Alerta Notifier",
  "description": "A simple chrome extension that notifies when new alerts are in Alerta",
  "manifest_version": 3,
  "version": "1.0.0",
  "icons": {
    "16": "alert.png",
    "48": "alert.png",
    "128": "alert.png"
  },
  "action": {
    "default_icon": {
      "16": "alert.png",
      "48": "alert.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "http://*/"
  ],
  "web_accessible_resources": [
    {
        "resources": [
            "alert.png"
        ],
        "matches": [],
        "extension_ids": [],
        "use_dynamic_url": false
    }
]
}